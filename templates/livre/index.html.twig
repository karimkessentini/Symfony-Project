{% extends 'base.html.twig' %}

{% block title %}Livres{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}
    <h1>Livres</h1>
    <br>
    <div>
        <a href="{{ path('livre_new') }}"><span class="btn btn-primary"><i class="fa fa-plus">&nbsp; Nouveau</i></span></a>
        <br>
    </div>
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Nbpages</th>
                <th>Datedition</th>
                <th>Nbexemplaires</th>
                <th>Prix</th>
                <th>Isbn</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for i,livre in livres %}
            <tr>
                <td>{{ i + 1 }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.nbpages }}</td>
                <td>{{ livre.datedition ? livre.datedition|date('Y-m-d') : '' }}</td>
                <td>{{ livre.nbexemplaires }}</td>
                <td>{{ livre.prix }}</td>
                <td>{{ livre.isbn }}</td>
                <td>
                    <a href="{{ path('livre_show', {'id': livre.id}) }}"><span class="btn btn-default"><i class="fa fa-eye"></i></span></a>
                    <a href="{{ path('livre_edit', {'id': livre.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i></span></a>
                    <a href="{{ path('livre_delete_2', {'id': livre.id}) }}"><span class="btn btn-danger"><i class="fa fa-trash-o"></i></span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Pas d'enregistremens trouv√©s</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
