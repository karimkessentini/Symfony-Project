{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <h1>Catégories</h1>

    <table class="table" border="1">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ categorie.designation }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ categorie.description }}</td>
            </tr>
        </tbody>
    </table>
    <div class="container">
        <div class="row">
            <div class="col col-lg-3">
                <a href="{{ path('categorie_index') }}"><span class="btn btn-primary"><i class="fa fa-backward">&nbsp; Retour</i> </span></a>
                <a href="{{ path('categorie_edit', {'id': categorie.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil">&nbsp; Editer</i> </span></a>
            </div>
            {{ include('categorie/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
