{% extends 'base.html.twig' %}

{% block title %}Editeur{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}
    <h1>Editeur</h1>
    <br>
    <div>
        <a href="{{ path('editeur_new') }}"><span class="btn btn-primary"><i class="fa fa-plus">&nbsp; Nouveau</i></span></a>
        <br>
    </div>
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomediteur</th>
                <th>Pays</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for i,editeur in editeurs %}
            <tr>
                <td>{{ i+1 }}</td>
                <td>{{ editeur.nomediteur }}</td>
                <td>{{ editeur.pays }}</td>
                <td>{{ editeur.telephone }}</td>
                <td>
                    <a href="{{ path('editeur_show', {'id': editeur.id}) }}"><span class="btn btn-default"><i class="fa fa-eye"></i></span></a>
                    <a href="{{ path('editeur_edit', {'id': editeur.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i></span></a>
                    <a href="{{ path('editeur_delete_2', {'id': editeur.id}) }}"><span class="btn btn-danger"><i class="fa fa-trash-o"></i></span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'enregistrements trouv√©s</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if test %}
        {{ include('categorie/warning.html.twig') }}
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('js/dataTables/dataTables.bootstrap.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
{% endblock %}
