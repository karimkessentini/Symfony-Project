{% extends 'base.html.twig' %}

{% block title %}Index Auteur{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}
    <h1>Auteurs</h1>
    <br>
    <div>
        <a href="{{ path('auteurnouvel_auteur') }}"><span class="btn btn-primary"><i class="fa fa-plus">&nbsp; Nouveau</i></span></a>
        <br>
    </div>
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
        <tr>
            <th>#</th>
            <th>Prenom</th>
            <th>Nom</th>
            <th>Biographie</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for c,a in listeAuteurs %}
            <tr>
                <td>{{ c+1 }}</td>
                <td>{{ a.prenom }}</td>
                <td>{{ a.nom }}</td>
                <td>{{ a.biographie }}</td>
                <td>
                    <a href="{{ path('auteurafficher_auteur', {'id': a.id}) }}"><span class="btn btn-default"><i class="fa fa-eye"></i></span> </a> &nbsp;
                    <a href="{{ path('auteuredit_auteur', {'id': a.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i></span></a> &nbsp;
                    <a href="{{ path('auteursupprimer_auteur', {'id': a.id}) }}"><span class="btn btn-danger"><i class="fa fa-trash-o"></i></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if test %}
        {{ include('auteur/warning.html.twig') }}
    {% endif %}
{% endblock %}
