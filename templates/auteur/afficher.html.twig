        <div class="row">
            <div class="col col-xs-12 col-lg-3 col-md-4 col-sm-6">
                <b>Prenom</b>
            </div>
            <div class="col col-xs-12 col-lg-9 col-md-8 col-sm-6">
                {{ auteur.prenom }}
            </div>
        </div>
        <div class="row">
            <div class="col col-xs-12 col-lg-3 col-md-4 col-sm-6">
                <b>Nom</b>
            </div>
            <div class="col col-xs-12 col-lg-9 col-md-8 col-sm-6">
                {{ auteur.nom }}
            </div>
        </div>
        <div class="row">
            <div class="col col-xs-12 col-lg-3 col-md-4 col-sm-6">
                <b>Biographie</b>
